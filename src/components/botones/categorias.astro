---
interface Props {
    href?: string;
  }
  const { href } = Astro.props;
---
  
<button class="bg-slate-100 rounded-full m-4 flex py-2  px-6 text-center">
    <a class="flex items-center justify-center mx-auto text-[#66E31A] font-bold text-center" href={href}>
        <slot/>
    </a>
</button>
  